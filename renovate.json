{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^org.jetbrains.kotlin",
        "^com.google.devtools.ksp"
      ],
      "groupName": "kotlin"
    }
  ],
  "postUpgradeTasks": {
    "commands": ["./update_dependency_diff"],
    "fileFilters": ["deps_*.txt"],
    "executionMode": "update"
  }
}
